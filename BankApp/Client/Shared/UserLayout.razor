@inherits LayoutComponentBase

<MudThemeProvider Theme="Theme"/>

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6">BankApp</MudText>
        <MudSpacer />
        <MudButton Href="/" Variant="Variant.Text" Style=@($"color:{Theme.PaletteDark.White}") Class="ml-4">Home</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <UserNavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private MudTheme Theme = new MudTheme()
    {
        Palette = new PaletteLight()
        {
            Primary = Colors.BlueGrey.Default,
            Secondary = Colors.Grey.Darken3,
            Tertiary = Colors.Teal.Default
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}